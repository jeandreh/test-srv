<!DOCTYPE html>
<html>
<head>
  <title>Cloudpos</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="cloudPosApp">
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Cloud POS", '#', id: "logo" %>
        <% #if logged_in? %>
        <nav>
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to "Products", "#/products" %></li>
            <li><%= link_to "Categories",  categories_path  %></li>
            <li><%= link_to "Supplies", supplies_path %></li>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Sales", "#/sales" %></li>
          </ul>
        </nav>
       <!--  <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><= link_to "Log out #{current_user.name.split(' ').first.capitalize}", logout_path, method: :delete ></li>
          </ul>
        </nav> -->
        <% #end %>
      </div>
    </header>

    <div id="main-content" class="view-frame animate-view" ng-view ></div>

    <div class="footer">
        <p><span class="glyphicon glyphicon-copyright-mark"></span>&nbsp;COPYRIGHT 2015, Cloud POS</p>
    </div>

</body>
</html>
