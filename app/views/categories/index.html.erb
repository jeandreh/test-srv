<h1>Categories</h1>

<% if flash[:errors] && flash[:errors].any? %>
	<div class="row">
	  <div id="error_explanation">
	    <h2>
	      <%= pluralize(flash[:errors].count, "error") %>
	    </h2>
	    <ul>
	      <% flash[:errors].each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
  </div>
<% end %>

<div class="row">
	<div class="col-lg-12">
		<%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
	</div>
</div>
<div class="row">
	&nbsp;
</div>
<div class="row">
	<div class="col-lg-12">
		<table class="table table-striped">
			<tr>
					<th>Name</th>
					<th>Description</th>
					<th>&nbsp;</th>
			</tr>
			<% @categories.each do |category| %>
			<tr>
				<td>
					<%= category.name %>
				</td>
				<td>
					<%= category.description %>
				</td>
				<td>
					<%= link_to "Show", category_path(category), class: 'btn btn-default btn-xs' %>
					<%= link_to "Edit", edit_category_path(category), class: 'btn btn-default btn-xs' %>
					<%= link_to "Remove", category_path(category),
						method: :delete, class: 'btn btn-default btn-xs',
						data: { confirm: 'Are you sure?' } %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>


