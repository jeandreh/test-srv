<h1>Supply Details</h1>

<% if flash[:errors] && flash[:errors].any? %>
<div id="error_explanation" class="row">
  <div class="col-lg-12">
    <h2>
      <%= pluralize(flash[:errors].count, "error") %>
    </h2>
    <ul>
      <% flash[:errors].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <h2>Name</h2>
    <p>
      <%= @supply.name %>
    </p>
     <h2>Price</h2>
    <p>
      <%= @supply.stock %>&nbsp;<%= @supply.unity %>
    </p>
  </div>
</p>

<div class="row">
  <div class="col-lg-12">
  	<%= link_to "Back", supplies_path, class: 'btn btn-default' %>
  	<%= link_to "Edit", edit_supply_path(@supply), class: 'btn btn-primary' %>
  	<%= link_to "Remove", supply_path(@supply),
  				method: :delete,
          class: 'btn btn-danger',
  				data: { confirm: 'Are you sure?' } %>
  </div>
</div>
