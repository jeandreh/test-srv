<h1>Users</h1>

<% if flash[:errors] && flash[:errors].any? %>
	<div class="row">
	  <div id="error_explanation">
	    <h2>
	      <%= pluralize(flash[:errors].count, "error") %>
	    </h2>
	    <ul>
	      <% flash[:errors].each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
  </div>
<% end %>

<div class="row">
	<div class="col-lg-12">
		<%= link_to "New User", new_user_path, class: 'btn btn-primary' %>
	</div>
</div>
<div class="row">
	&nbsp;
</div>
<div class="row">
	<div class="col-lg-12">
		<table class="table table-striped">
			<tr>
					<th>Name</th>
					<th>Email</th>
					<th>&nbsp;</th>
			</tr>
			<% @users.each do |user| %>
			<tr>
				<td>
					<%= user.name.titleize %>
				</td>
				<td>
					<%= user.email %>
				</td>
				<td>
					<%= link_to "Show", user_path(user), class: 'btn btn-default btn-xs' %>
					<%= link_to "Edit", edit_user_path(user), class: 'btn btn-default btn-xs' %>
					<%= link_to "Remove", user_path(user),
						method: :delete, class: 'btn btn-default btn-xs',
						data: { confirm: 'Are you sure?' } %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
