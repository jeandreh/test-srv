<h1>User Profile</h1>

<% if @user.errors.any? %>
<div id="error_explanation" class="row">
  <div class="col-lg-12">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
    </h2>
    <ul>
      <% @user.errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <h2>Name</h2>
    <p>
      <%= @user.name %>
    </p>
    <h2>Email</h2>
    <p>
      <%= @user.email %>
    </p>
  </div>
</p>

<div class="row">
  <div class="col-lg-12">
  	<%= link_to "Back", users_path, class: 'btn btn-default' %>
  	<%= link_to "Edit", edit_user_path(@user), class: 'btn btn-primary' %>
  	<%= link_to "Remove", user_path(@user),
  				method: :delete,
          class: 'btn btn-danger',
  				data: { confirm: 'Are you sure?' } %>
  </div>
</div>
